<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Metrogas.cl</title>
    <style>
        * {
            margin: 0;
            color: black;
            text-decoration: none;
        }
        body {
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', 'Geneva', 'Verdana', 'sans-serif'
        }
        header {
            padding: 1rem;
            background: rgba(0, 148, 213, .20);
        }
        h1 {
            padding: 1rem 0;
        }
        nav {
            margin: 10px 0;
        }
        nav a {
            font-size: 1.2rem;
            color: #0094D5;
            text-align: justify;
            background: rgba(0, 148, 213, .20);
            border-radius: 25px;
            padding: 5px 40px;
            text-decoration: none;
        }
        main {
            padding: 1rem;
        }
        main * {
            padding: 0.5rem;
            margin: 0.5rem 0;
        }
        hr {
            margin: 0.5rem 0;
            padding: 0;
        }
        input[type="text"], textarea {
            border-radius: 5px;
            padding: 5px;
            width: calc(100vw - 2rem);
        }
        input[type="submit"] {
            font-size: 1.2rem;
            color: #0094D5;
            text-align: justify;
            background: rgba(0, 148, 213, .20);
            border-radius: 25px;
            padding: 5px 40px;
            text-decoration: none;
            border: 1px solid;
        }
        code {
            background: #e6e4e4;
            display: block;
            width: calc(100vw - 4rem);
            padding: 1rem;
            white-space: pre-wrap;
        }
        footer {
            padding: 1rem;
            position: absolute;
            bottom: 0;
            border-color: #2684FF;
            box-shadow: 0px 0px 0 2px #2684ff;
            width: calc(100vw - 2rem);
            border-top: 2px;
            border-top-style: solid;
        }
    </style>
</head>
<body>
    <header>
        <h1>Portal API - Metrogas.cl</h1>
        @{ 
            /*
        <nav>
            <a asp-area="" asp-page="/Index">Home</a>
            <a asp-area="" asp-page="/Privacy">Test SAP</a>
            <a asp-area="" asp-page="/Encripter">Test Encriptación</a>
            <a target="_blank" href="~/swagger">Doc API</a>
        </nav>
            */
        }
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <div>
            &copy; 2022 - api / web / metrogas
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
